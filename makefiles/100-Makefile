CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
#RM = rm -f
HEADER = m.h
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean all

all: $(OBJ) $(HEADER)
	$(CC) $(OBJ) -o $(NAME)

clean: 
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all 
